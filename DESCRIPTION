Package: oysteR
Title: Scans R Projects for Vulnerable Third Party Dependencies
Version: 0.1.4
Authors@R:c(
    person("Jeffry", "Hesse", , "jhesse@sonatype.com", role = "aut"),
    person("Brittany", "Belle", , "bbelle@sonatype.com", role = "aut"),
